<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="30dp"
    tools:context="com.upiita.witcom2016.conference.ConferenceDetailFragment">

    <TextView
        style="@style/TextLargeAccent"
        android:layout_gravity="end"
        android:text="@string/date" />

    <TextView
        android:id="@+id/date"
        style="@style/TextLargeDark"
        android:layout_gravity="end"
        android:text="XX-XX-XXXX" />

    <TextView
        android:id="@+id/type"
        style="@style/TextLargeBlue"
        android:text="type" />

    <TextView
        style="@style/TextLargeAccent"
        android:paddingLeft="20dp"
        android:text="@string/title" />

    <TextView
        android:id="@+id/title"
        style="@style/TextLargeDark"
        android:paddingLeft="20dp"
        android:text="Sample title" />

    <TextView
        style="@style/TextLargeAccent"
        android:paddingLeft="20dp"
        android:text="@string/author" />

    <TextView
        android:id="@+id/auth"
        style="@style/TextLargeDark"
        android:paddingLeft="20dp"
        android:text="Sample Author" />

    <TextView
        style="@style/TextLargeAccent"
        android:paddingLeft="20dp"
        android:text="@string/from" />

    <TextView
        android:id="@+id/from"
        style="@style/TextLargeDark"
        android:paddingLeft="20dp"
        android:text="XX-XX-XXXX" />

    <TextView
        android:id="@+id/about"
        style="@style/TextLargeAccent"
        android:paddingLeft="20dp"
        android:text="@string/about_details" />

    <TextView
        android:id="@+id/content"
        style="@style/TextLargeDark"
        android:paddingLeft="20dp"
        android:text="sample content Lorem Ipsum Dolor Sic" />

    <TextView
        android:id="@+id/aboutEnd"
        style="@style/TextLargeAccent"
        android:paddingLeft="20dp"
        android:text="@string/about_details" />

    <TextView
        android:id="@+id/typeEnd"
        style="@style/TextLargeBlue"
        android:text="typeEnd" />

</LinearLayout>
